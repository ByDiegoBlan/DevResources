---
type Resource = {
    id: `${string}-${string}-${string}-${string}-${string}`
    name: string,
    prevImage: string,
    url: string,
    category: string[]
}

type Props = Resource

const {name,prevImage,url,id,category} = Astro.props

---
<article class="box-border min-w-[350px] max-w-[400px] h-[150px] neumorphism ">
    <a class="flex items-center p-2 gap-4 w-full h-full" href={url} target="_blank">
        <img class="h-full w-1/3 object-cover rounded-md" src={prevImage}>
        <div class="flex flex-col gap-2">
            <p class="text-xl font-bold text-zinc">{name}</p>
            <section class="flex gap-1 text-sm font-semibold flex-wrap">
                {category.map((item,index) => <p> {item} <span class="text-zinc-700">|</span></p>)}
            </section>
        </div>
    </a>
</article>