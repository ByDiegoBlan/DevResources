---
type Resource = {
    id: `${string}-${string}-${string}-${string}-${string}`
    name: string,
    prevImage: string,
    url: string,
    category: string[]
}

type Props = Resource

const {name,prevImage,url,id,category} = Astro.props

---
<article class="box-border m-2 sm:m-0 w-full sm:min-w-[180px] max-w-[280px] neumorphism ">
    <a class="flex items-center p-2 gap-4 w-full  h-full flex-row" href={url} target="_blank">
        <img class=" h-full w-1/3 object-contain sm:object-cover rounded-md" src={prevImage}>
        <div class="flex flex-col gap-2">
            <p class="text-xl font-bold text-zinc">{name}</p>
            <section class="flex justify-center sm:justify-normal gap-1 text-sm font-semibold flex-wrap">
                {category.map((item) => <p class="text-zinc-300"> {item} <span class="text-zinc-700">|</span></p>)}
            </section>
        </div>
    </a>
</article>